<h2>Upcoming events</h2>

<% if @events.empty? %>
    No upcoming events.
<% end %>

<% @events.each do |event| %>
    <h2><%= event.name %></h2>
    <p><%= event.description %></p>
    <p><strong>Location: </strong><%= event.location %></p>
    <p><strong>Date & Time: </strong><%= event.time.strftime("%I:%M %p, %A %dth of %B %Y") %></p>
<% end %>